<mjml>
  <mj-head>
    <mj-font
      name="Montserrat"
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800"
    />
    <mj-preview></mj-preview>
    <mj-title></mj-title>
    <mj-style inline="inline">
      .title h1 { font-weight: 600; padding-top: 10px ;font-size: 18px} .title
      span { color: #6caaad; font-weight: 700} .clinic-info h4 { font-size:
      18px; font-weight: 500; margin: 0; padding: 10px} .clinic-info p {
      font-size: 16px; line-height: 20px}. confirmed-top{border-top-left-radius:
      10px}
    </mj-style>
    <mj-style>
      .confirmed-top h5 {margin: 0; font-size: 16px; font-weight: 500}
      .confirmed-top h4 {margin: 0; font-size: 18px} .confirmed-bottom h4
      {margin: 0; font-size: 18px}
    </mj-style>
    <mj-style>
      .doctor-name h4 {margin: 0; font-size: 16px } .doctor-name p {margin: 0;
      padding-top:6px; font-size: 16px }</mj-style
    >
  </mj-head>
  <mj-body>
    <mj-include path="./header.mjml" />
    <mj-section background-color="#e8f4ee" padding="20px 0 0 0">
      <mj-column>
        <mj-text
          align="center"
          color="#9bc3ca"
          font-family="Montserrat"
          css-class="title"
          padding="0"
        >
          <h1>Good day {Patient Name}!</h1>
        </mj-text></mj-column
      >
    </mj-section>
    <mj-section background-color="#e8f4ee">
      <mj-column width="500px">
        <mj-image
          src="./assets/background/appointment-bgnd.png"
          alt="default-image"
          padding="0"
          width="330px"
        />
        <mj-text
          align="center"
          font-family="Montserrat"
          css-class="clinic-info"
          font-size="14px"
        >
          <p>
            We’d like to remind you that your dental appointment with us is
            tomorrow.
          </p>
          <p>
            To refresh your memory, we’ve also attached your appointment
            details. See you soon!
          </p>
        </mj-text></mj-column
      >
    </mj-section>
    <mj-wrapper
      background-color="linear-gradient(0deg, rgba(255,255,255,1) 50%, rgba(232,244,238,1) 50%)"
      padding=" 0 100px"
    >
      <mj-section background-color="#a3d4cb" border-radius="20px">
        <mj-column width="100%">
          <mj-text
            css-class="confirmed-top"
            font-family="Montserrat"
            padding="0 25px 5px"
            color="#4f4f4f"
          >
            <h5>Confirmed Date and Time</h5>
            <h4>Monday 08 Marth, at 09:00 AM</h4>
          </mj-text>
          <mj-divider
            border-width="1px"
            border-style="solid"
            border-color="#8b9d99"
          />
          <mj-text
            css-class="confirmed-bottom"
            color="#4f4f4f"
            font-family="Montserrat"
          >
            <h4>Emergency Appointment</h4>
          </mj-text>
        </mj-column>
        <mj-column width="30%" padding-top="10px">
          <mj-image
            padding="15px 0 0 30px"
            align="left"
            width="80px"
            src="./assets/logo/logo.png"
            alt="default-image"
          />
        </mj-column>
        <mj-column width="70%" padding-top="10px">
          <mj-text
            css-class="doctor-name"
            font-family="Montserrat"
            color="#4f4f4f"
          >
            <h4>Dr. Death</h4>
            <p>Lorem dolor</p></mj-text
          >
        </mj-column>
      </mj-section>
    </mj-wrapper>
    <mj-section background-color="#ffffff" padding="10px 0 0 0">
      <mj-column>
        <mj-text
          color="#4f4f4f"
          align="center"
          font-size="16px"
          font-family="Montserrat"
          font-weight="600"
          padding-top="30px"
        >
          <p>If you cannot attend tomorrow, let them now!</p>
        </mj-text>
        <mj-button
          href="#"
          border-radius="20px"
          line-height="20px"
          font-family="Montserrat"
          background-color="#a3d4cb"
          color="white"
          text-transform="uppercase"
          font-weight="600"
          padding-bottom="50px"
        >
          Cancel this appointment
        </mj-button>
      </mj-column></mj-section
    >

    <mj-include path="./footer.mjml" />
  </mj-body>
</mjml>
